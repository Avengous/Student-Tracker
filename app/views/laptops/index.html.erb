<h1>Laptop Manager</h1>

<div id="users_index">	
	<table>
		<tr>
			<th id="header_width">Item Name</th>
			<th id="header_width">Scan Code</th>
			<th></th>
			<th></th>
		</tr>
		
		<% @laptop.each do |laptop| %>
		<tr>
			<td><%= laptop.itemname %></td>
			<td><%= laptop.scancode %></td>
			
			<td>
				<button id="table_button" type="button">
					<%= link_to "Edit", edit_laptop_path(laptop) %>
				</button>
			</td>
			
			<td>
				<button id="table_button" type="button">
					<%= link_to "Delete", laptops_path %>
				</button>
			</td>
		</tr>
		<% end %>
	</table>	
</div>

<div id="table_footer">
				<button id="table_button" type="button"><%= link_to "Add Laptop", new_laptop_path %></button>
</div>