<h1>Laptop Manager</h1>

<div id="laptop_index_table">
	<div id="pagination_container">
		<%= will_paginate @laptop, next_label: '>', previous_label: '<' %>
	</div>	
	<table>
		<tr>
			<th>Item Name</th>
			<th>Scan Code</th>
			<th>Checked Out?</th>
			<th>Disabled</th>
			<th></th>
			<th></th>
		</tr>
		
		<% @laptop.each do |laptop| %>
		<tr id="table_rows">
			<td>
				<%= link_to laptop.itemname,
				 laptop,
				 id: 'table_link' %>
			</td>
			<td><%= laptop.scancode %></td>
			<td><%= check_if_checked_out(laptop) %></td>
			<td><%= check_if_disabled(laptop) %></td>
			
			<td>
				<button id="table_button" type="button">
					<%= link_to "Edit", edit_laptop_path(laptop) %>
				</button>
			</td>
			
			<td>
				<button id="table_button" type="button">
					<%= link_to "Delete", laptop, method: :delete, data: { confirm: "Are you sure?" } %>
				</button>
			</td>
		</tr>
		<% end %>
	</table>
	<br />
				<button id="table_button" type="button"><%= link_to "Add Laptop", new_laptop_path %></button>
</div>

