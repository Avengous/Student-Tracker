			<th id="header_width">First Name</th>
			<th id="header_width">Last Name</th>
			<th></th>
			<th></th>
		</tr>
		
		<% @student.each do |student| %>
		<tr>
			<td><%= student.firstname %></td>
			<td><%= student.lastname %></td>
			
			<td>
				<button id="table_button" type="button">
					<%= link_to "Edit", students_path %>
